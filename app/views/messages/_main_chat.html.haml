.main-chat
  .main-chat__main-header
    .main-chat__main-header__left-box
      %p.main-chat__main-header__left-box__current-group
        = @group.name
      %ul.main-chat__main-header__left-box__member-list
        Member : 
        %li.main-chat__main-header__left-box__member-list__member
          -@group.users.each do |user|
            = user.name
    = link_to edit_group_path(@group) do
      .main-chat__main-header__edit-btn
        Edit

  .main-chat__message-list
    = render @messages

  .main-chat__message-form
    = form_for [@group, @message] do |f|
      .main-chat__message-form__input-box
        = f.text_field :content, class: 'main-chat__message-form__input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'main-chat__message-form__input-box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'main-chat__message-form__input-box__image__file'
      = f.submit 'Send', class: 'main-chat__message-form__input-box__submit-btn'
