.main-chat__message-list__message{data: {message: {id: message.id}}}
  .main-chat__message-list__message__message-data
    %p.main-chat__message-list__message__message-data__username
      = message.user.name
    %p.main-chat__message-list__message__message-data__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  %p.main-chat__message-list__message__text
    - if message.content.present?
      %p.main-chat__message-list__message__text__content
        = message.content
    = image_tag message.image.url, class: 'main-chat__message-list__message__text__image' if message.image.present?