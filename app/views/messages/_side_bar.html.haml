.side-bar
   .side-bar__side-header
      .side-bar__side-header__box
         %p.side-bar__side-header__box__name
            = current_user.name if user_signed_in?
         %ul.side-bar__side-header__box__menu
            %li.side-bar__side-header__box__new-group
            = link_to new_group_path do
               = icon('far fa-edit',  class: "side-bar__side-header__box__menu--new-group--icon")
            %li.side-bar__side-header__box__edit-user
            = link_to edit_user_path(current_user) do
               = icon('fas fa-cog',  class: "side-bar__side-header__box__menu--edit-user--icon")
   .side-bar__grouplist
      - current_user.groups.each do |group|
         .side-bar__grouplist__group
            = link_to "#" do
               %p.side-bar__grouplist__group__group-name
                  = group.name
               %p.side-bar__grouplist__group__latest-message
                  まだメッセージがありません

